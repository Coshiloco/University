{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "UniversityDb": "Server=localhost\\SQLEXPRESS;Database=UniversityDB;Trusted_Connection=True;"
  },
  "JsonWebTokenKeys": {
    "ValidateIssuerSigningKey": true,
    "IssuerSigningKey": "", // Aqui ira la clave de firma
    "ValidateIssuer": true,
    "ValidIssuer": "https://localhost:7255", // La ruta que esta nuestro servidor para validar que es nuestro servidor local
    "ValidateAudience": true, // Para saber quien nos esta validando
    "ValidAudience": "https://localhost:7255", // La ruta que esta nuestro servidor para validar que es nuestro servidor local
    "RequireExpirationTime": true,
    "ValidateLifetime": true

    /*Para ponerlo por defecto y asi no tener que tocarlos luego en el codigo*/
  }
}
